<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailsApp.Views.GetRandomCoctailPage"
             Title="Get Random Coctail Page">
    <VerticalStackLayout>
        <Label 
                 Text="Please click to button to take your cocktail"
                 TextColor="Orange"
                 FontAttributes="Bold"
                 FontSize="14"
                 Margin="20,20,20,20"
                 VerticalOptions="Center" 
                 HorizontalOptions="Center" />
        <Button Text="Get Random Cocktails"
                Margin="10,10,10,10"
                BackgroundColor="OrangeRed"
                Command="{Binding GetRandomCocktailCommand}"
                VerticalOptions="StartAndExpand" />
        <Label
                TextColor="Black"
                Margin="20,20,20,20"
                Text="{Binding Result}" />
    </VerticalStackLayout>
</ContentPage>